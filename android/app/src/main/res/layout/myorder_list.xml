<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_myorders"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark">


                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_orderproduct"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/logo"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:id="@+id/tv_orderproduct_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="Gents Fashion" />

                <TextView
                    android:id="@+id/tv_orderproduct_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="Rs.500" />
                <TextView
                    android:id="@+id/tv_order_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="Qty:1" />
                <TextView
                    android:id="@+id/tv_odelcharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="Rs.40" />
                <TextView
                    android:id="@+id/tv_myordertotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="Rs.540" />
                <TextView
                    android:id="@+id/tv_odeldate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="Delivery Expected on 12-12-2020:" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_marginStart="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="140dp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>